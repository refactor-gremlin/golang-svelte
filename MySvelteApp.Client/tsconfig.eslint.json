{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"allowArbitraryExtensions": true,
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": [
		"src/**/*",
		"tests/**/*",
		"vite.config.ts",
		"vite.config.js",
		"vitest-setup-client.ts",
		"playwright.config.ts",
		"*.config.ts",
		"*.config.js"
	],
	"exclude": ["node_modules", "build", ".svelte-kit"]
}
