{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Dev: Frontend in Edge",
        "type": "edge",
        "request": "launch",
        "url": "http://localhost:5173",
        "webRoot": "${workspaceFolder}/MySvelteApp.Client"
      },
      {
        "name": "Attach to Go backend (Delve)",
        "type": "go",
        "request": "attach",
        "mode": "remote",
        "host": "127.0.0.1",
        "port": 2345,
        "showLog": true,
        "debugAdapter": "legacy",
        "preLaunchTask": "dev:fullstack",
        "postDebugTask": "dev:stop",
        "cwd": "${workspaceFolder}/MySvelteApp.Server"
      }
    ],
    "compounds": [
      {
        "name": "Dev: Fullstack (Edge + Go attach)",
        "configurations": [
          "Attach to Go backend (Delve)",
          "Dev: Frontend in Edge"
        ]
      }
    ]
  }
  